{
  "manifest_version": 3,
  "name": "ZenTube",
  "version": "1.0.0",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png",
    "512": "icons/512.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png",
      "512": "icons/512.png"
    },
    "default_popup": "index.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["src/content.ts"],
      "run_at": "document_end"
    }
  ]
}
